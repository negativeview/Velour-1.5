<div id="actionbar">
</div>
<form id="task-new-form">
	<label for="title">Title</label>
	<input type="text" name="title" id="title" />
	<label for="body">Body</label>
	<textarea name="body" id="body"></textarea>
	<label for="project">Project</label>
	<select name="project" id="project">
		<option value="0">None</option>
		<option value="1">Velour</option>
	</select>
	<input type="submit" value="Create" />
	<h2>Optional</h2>
	<div class="optional">
		<label for="assigned-to">Assigned To</label>
		<select name="assigned-to" id="assigned-to">
			<option value="1">Daniel Grace</option>
			<option value="2">J Monet</option>
		</select>
		<label for="state">State</label>
		<select name="state" id="state">
			<option value="new">New</option>
			<option value="acknowledged">Acknowledged</option>
			<option value="began">Work Began</option>
			<option value="info-needed">Info Needed</option>
			<option value="believed-done">Believed Done</option>
			<option value="confirmed-done">Confirmed Done</option>
			<option value="live">Live</option>
		</select>
	</div>
</form>
